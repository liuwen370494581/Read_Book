<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="#FAFBFD"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.example.liuwen.two.View.CornerImageView
                android:id="@+id/iv_search_item_cover"
                android:layout_width="72dp"
                android:layout_height="96dp"
                android:src="@mipmap/ic_default_cover"
                app:cor_shape="round"
                app:radius="3dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">


                <TextView
                    android:id="@+id/tv_search_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text_color_33"
                    android:textSize="15dp"
                    tools:text="大唐荣耀" />

                <TextView
                    android:id="@+id/tv_search_item_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@mipmap/ic_default_author_left"
                    android:drawablePadding="3dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="作者："
                    android:textSize="@dimen/textSize_12" />

                <TextView
                    android:id="@+id/tv_search_item_update_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawablePadding="3dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="1.1"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize_12"
                    tools:text="最新章节：" />

                <TextView
                    android:id="@+id/tv_search_item_update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawablePadding="3dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="1.1"
                    android:maxLines="1"
                    android:textSize="@dimen/textSize_12"
                    tools:text="更新时间：" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:drawablePadding="3dp">

                    <ImageView
                        android:id="@+id/img_search_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_default_source_left" />

                    <TextView
                        android:id="@+id/tv_search_item_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@id/img_search_source"
                        android:background="@drawable/bg_source"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:textColor="@color/sourceColor"
                        android:textSize="@dimen/textSize_12" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>